<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/shadow" />
        </shape>
    </item>
    <!-- Main button -->
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="80dp"
                android:centerColor="@color/primary_pink"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="@color/primary_pink_light"
                android:endColor="@color/primary_pink_dark" />
        </shape>
    </item>
</layer-list>