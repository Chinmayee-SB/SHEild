<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/tvHelplineIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_phone"
        android:contentDescription="Helpline Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="#A64D79" />

    <TextView
        android:id="@+id/tvHelplineName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#2C2C2C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvHelplineNumber"
        app:layout_constraintStart_toEndOf="@+id/tvHelplineIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Women's Safety Line" />

    <TextView
        android:id="@+id/tvHelplineNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A64D79"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="911" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tap to call this emergency number"
        android:textColor="#757575"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvHelplineIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvHelplineName"
        app:layout_constraintEnd_toStartOf="@+id/tvHelplineNumber"
        android:layout_marginTop="2dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>