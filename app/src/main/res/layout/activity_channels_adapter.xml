<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:strokeColor="@color/rose300"
    app:strokeWidth="2dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="#FFECD0">   <!-- UPDATED: card background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_channel_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Channel Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>  <!-- UPDATED to black -->

        </LinearLayout>

        <!-- Online / Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/online_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/online_dot"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_online_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#000000"/> <!-- UPDATED to black -->

            <TextView
                android:id="@+id/tv_total_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/3429 online"
                android:layout_marginStart="6dp"
                android:textSize="13sp"
                android:textColor="#000000"/>  <!-- UPDATED -->

        </LinearLayout>

        <!-- Messages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_msg_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenny: Yeah, I have been thinking..."
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_msg_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lina: Hey girls, Wassup!"
                android:textSize="13sp"
                android:textColor="#000000"/>  <!-- UPDATED -->

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
