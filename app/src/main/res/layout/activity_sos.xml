<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7">

    <!-- Wave Animation Circles (4 waves) -->
    <View
        android:id="@+id/wave4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wave_circle"
        android:alpha="0"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/sosButton"
        app:layout_constraintBottom_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="@id/sosButton"
        app:layout_constraintEnd_toEndOf="@id/sosButton" />

    <View
        android:id="@+id/wave3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wave_circle"
        android:alpha="0"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/sosButton"
        app:layout_constraintBottom_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="@id/sosButton"
        app:layout_constraintEnd_toEndOf="@id/sosButton" />

    <View
        android:id="@+id/wave2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wave_circle"
        android:alpha="0"
        app:layout_constraintWidth_percent="0.58"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/sosButton"
        app:layout_constraintBottom_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="@id/sosButton"
        app:layout_constraintEnd_toEndOf="@id/sosButton" />

    <View
        android:id="@+id/wave1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/wave_circle"
        android:alpha="0"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/sosButton"
        app:layout_constraintBottom_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="@id/sosButton"
        app:layout_constraintEnd_toEndOf="@id/sosButton" />

    <!-- Outer Circle (Border effect) -->
    <View
        android:id="@+id/outerCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/outer_circle_border"
        app:layout_constraintWidth_percent="0.42"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SOS Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sosButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:focusable="true"
        app:fabCustomSize="200dp"
        app:maxImageSize="0dp"
        app:backgroundTint="#A64D79"
        app:tint="@android:color/white"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Count Circle (like in your image showing "02") -->
    <View
        android:id="@+id/countCircle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/count_circle_bg"
        app:layout_constraintTop_toTopOf="@id/sosButton"
        app:layout_constraintBottom_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="@id/sosButton"
        app:layout_constraintEnd_toEndOf="@id/sosButton" />

    <!-- SOS Text -->
    <TextView
        android:id="@+id/sosText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:text="SOS"
        android:textColor="@android:color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintBottom_toBottomOf="@id/sosButton"
        app:layout_constraintEnd_toEndOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="@id/sosButton"
        app:layout_constraintTop_toTopOf="@id/sosButton" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sharing Location"
        android:textSize="16sp"
        android:textColor="#A64D79"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text (optional) -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/instructionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>